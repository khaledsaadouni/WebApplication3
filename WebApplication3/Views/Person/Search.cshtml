@model WebApplication3.Models.person
@{
    ViewBag.Title = "Search Page";
}

<div class="jumbotron">
    <h1>Search </h1>
    <table class="table">
        <thead>
            <tr>

                 
                <th scope="col">FirstName</th> 
                <th scope="col">Country</th>
                <th scope="col">  </th>
            </tr>
        </thead>
        <tbody>

            @using (Html.BeginForm("Search", "Person", FormMethod.Post))
            {
                <tr> 

                    <td> @Html.TextBoxFor(m => m.firstname)</td>
                    <td>@Html.TextBoxFor(m => m.country)</td>
                
                    <td>  <input type="submit" value="Search" /></td>

                </tr>

            }
            </tbody>
    </table>


        
   
</div>